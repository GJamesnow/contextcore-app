generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // Primary Vercel Key
  directUrl = env("POSTGRES_URL_NON_POOLING") // Fallback
}

model AssetAnalysis {
  id               Int      @id @default(autoincrement())
  createdAt        DateTime @default(now())
  
  // Location
  country          String
  region           String
  city             String
  notes            String

  // Financials
  purchasePrice    Float
  renovationBudget Float
  grossRent        Float
  operatingExpenses Float

  // Metrics
  capRate          Float
  cashOnCash       Float
  contextScore     Int
}